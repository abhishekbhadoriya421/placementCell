<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Placement Cell</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <div id="navigationBar" class="p-1 pe-4 ps-4" style="display: flex; justify-content: space-between; background-color: rgb(37, 199, 253);">
        <h2 class="Heading" style=" color: white;">Placement Cell</h2>
      <div>
        <% if(!locals.user){%>
          <a href="/user/loginPage" type="button" class="btn btn-dark me-2" id="logIn">logIn</a>
          <a href="/user/signupPage" type="button" class="btn btn-dark" id="signIn">SignUp</a> 
        <% } else{ %>
          <a href="/CSV/download" type="button" class="btn btn-success" id="Download">DownloadCSV</a> 
          <a href="/user/signOut" type="button" class="btn btn-outline-danger" id="signOut">SignOut</a> 
        <% } %>
      </div>
    </div> 
    <% if(locals.user){%>   
    <div class="p-4 d-flex justify-content-center" id="ActivitiesSection">
        <button type="button" class="btn btn-primary me-4" id="AddStudent">+Add Student</button>
        <button type="button" class="btn btn-primary" id="AddInterview">+Add Interview</button>
    </div>
    <% } %>
    <div class="studentAndInterviewFormContainer">
      <div class="addStudentForm"><%- include('addStudentForm') %></div>
      <div class="addInterviewForm"><%- include('addInterviewForm') %></div> 
    </div>

    <div class="availableInterviewList">
      <h1>Available Interview List</h1>
      <%- include('available')  %>
    </div>

    <div class="StudentList m-0">
        <h2 class="StudentListHeading mb-3">Student List</h2>
        <%- include('studentList')%>
    </div>

    <div class="InterviewList mt-5">
        <h2 class="InterviewListHeading mb-3">Interview List</h2>
        <%- include('interviewList')%>
    </div>
    <script src="/js/home.js"></script> 
    <script src="/js/student.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
  </body>
</html>